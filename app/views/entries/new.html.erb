<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3>Select an activity to track</h3>
      <%= form_for @entry do |f| %>
        <div class="row">
          <div class="col-md-12">
            <%# http://api.rubyonrails.org/classes/ActionView/Helpers/FormOptionsHelper.html#method-i-select %>
            <%#= f.select(:activity_id, options_from_collection_for_select(@activities, :id, :name, @entry.activity_id), { include_blank: true }) %>
            <%= f.select(:activity_id, @activities.where(is_deleted: false).map { |a| [a.name, a.id] }, { include_blank: true }) %>
          </div>
        </div>
    </div>
    <div class="col-md-6">
      <h3>Start timing</h3>
        <div id="duration-timer">

          <button id="start-button" type="button">Start</button>
          <button id="stop-button" type="button">Stop</button>

          <div id="timer"></div>

          <div class="field">
            <%= f.label :duration %><br />
            <%= f.text_field :duration_hours, class: "" %>
            <%= f.text_field :duration_minutes, class: "" %>
            <%= f.text_field :duration_seconds, class: "" %>
          </div>
        </div>
        <div class="field">
          <%= f.label :date %><br />
          <%= f.date_field :date, class: "" %>
        </div>
        <div class="field">
          <%= f.label :note %><br />
          <%= f.text_field :note, class: "" %>
        </div>
        <%= f.submit "Add", class: "", id: "duration-timer-submission" %>
      <% end %>
    </div>
  </div>
</div>
