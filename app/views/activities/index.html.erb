<div class="container">
  <div class="row">
    <div class="col-md-3 col-centered">
      <h1>Your activities</h1>

      <% if current_user.activities.present? %>
        <ul class="list-unstyled">
          <% @activities.each do |activity| %>
            <% if !activity.is_deleted? %>
              <li>
                <div class="row">
                  <div class="col-md-8">
                    <%= activity.name %>
                  </div>
                  <div class="col-md-1">
                    <%= link_to "<i class=\"far fa-edit\"></i>".html_safe, edit_activity_path(activity) %>
                  </div>
                  <div class="col-md-1">
                    <%= link_to "<i class=\"far fa-trash-alt\"></i>".html_safe, activity_path(activity),
                        method: :delete, data: { confirm: "Are sure you want to delete this activity?" } %>
                  </div>
                </div>
              </li>
            <% end %>
          <% end %>
        </ul>
      <% else %>
        <p>Your list of activities is empty.</p>
      <% end %>

      <%= form_for @activity do |f| %>
        <div class="row">
          <div class="col-md-8">
            <%= f.text_field :name, class: "" %>
          </div>
          <div class="col-md-4">
            <%= f.submit "Add", class: "" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

