<div class="container">
  <div class="row">
    <div class="col-md-12 col-centered">
      <h1>Entries</h1>

      <% if current_user.entries.present? %>
        <ul class="list-unstyled">
          <% @entries.each do |entry| %>
            <li>
              <div class="row">
                <div class="col-md-2">
                  <%= entry.activity.name %>
                </div>
                <div class="col-md-2">
                  <%= entry.duration %>
                </div>
                <div class="col-md-2">
                  <%= entry.date %>
                </div>
                 <div class="col-md-2">
                  <%= entry.note %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>Your list of entries is empty.</p>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 col-centered">
      <%= form_tag(reports_path, method: :get) do %>
        <%= date_field_tag(:date, @date) %>
        <%= submit_tag 'View' %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 col-centered">
      <h2>Entries by date <%= @date %></h2>
      <ul class="list-unstyled">
        <% @entries_by_date.each do |entry| %>
          <li>
            <div class="row">
              <div class="col-md-2">
                <%= entry.activity.name %>
              </div>
              <div class="col-md-2">
                <%= entry.duration %>
              </div>
              <div class="col-md-2">
                <%= entry.date %>
              </div>
               <div class="col-md-2">
                <%= entry.note %>
              </div>
              <div class="col-md-1">
                <%= link_to "<i class=\"far fa-edit\"></i>".html_safe, edit_entry_path(entry) %>
              </div>
              <div class="col-md-1">
                <%= link_to "<i class=\"far fa-trash-alt\"></i>".html_safe, entry_path(entry),
                    method: :delete, data: { confirm: "Are sure you want to delete this activity?" } %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

