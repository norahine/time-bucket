<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3>Select an activity to track</h3>

      <%= form_for @entry do |f| %>
        <div class="row">
          <div class="col-md-12">
            <%# http://api.rubyonrails.org/classes/ActionView/Helpers/FormOptionsHelper.html#method-i-select %>
            <%#= f.select(:activity_id, options_from_collection_for_select(@activities, :id, :name, @entry.activity_id), { include_blank: true }) %>
            <%= f.select(:activity_id, @activities.map { |a| [a.name, a.id] }, { include_blank: true }) %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-6">
      <h3>Start timing</h3>
    </div>
  </div>
</div>
