<div class="container medium-margin-top">
  <div class="row">
    <div class="col-sm-4 offset-sm-4">
      <h1>Sign up</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <% if resource.errors.any? %>
          <div class="small-margin-bottom alert alert-danger">There was an issue creating your account: <%= resource.errors.full_messages.map(&:inspect).join('. ') %>.</div>
        <% end %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "small-margin-bottom full-width" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <i class="label-secondary-info">(<%= @minimum_password_length %> characters minimum)</i>
          <% end %>
          <br />
          <%= f.password_field :password, autocomplete: "off", class: "small-margin-bottom full-width" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "small-margin-bottom full-width" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-secondary btn-sm full-width" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
